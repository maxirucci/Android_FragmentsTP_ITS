<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/lyFondo"
    android:clickable="true"
    android:focusable="true"
    android:background="#CC020202">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/circular_form_background">

            <TextView
                android:id="@+id/txtNombreCompletoDetalle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/amaranth"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Detalle nombre completo" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgFotoPerfilDetalles"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_margin="15dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/descrFotoPerfil"
                app:civ_border_color="@color/color_BabyBlue"
                app:civ_border_width="2sp"
                app:layout_constraintEnd_toEndOf="@+id/txtNombreCompletoDetalle"
                app:layout_constraintStart_toStartOf="@+id/txtNombreCompletoDetalle"
                app:layout_constraintTop_toBottomOf="@+id/txtNombreCompletoDetalle"
                tools:ignore="UnusedAttribute">

            </de.hdodenhof.circleimageview.CircleImageView>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="24dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/imgFotoPerfilDetalles"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="4dp"
                    android:background="@android:drawable/stat_sys_phone_call"
                    android:backgroundTint="@color/black"
                    android:contentDescription="@string/descrFotoPerfil"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/txtNumeroTelefonoDetalles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/aldrich"
                    android:textColor="@color/black"
                    tools:text="2994761349" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="4dp"
                    android:background="@android:drawable/ic_dialog_map"
                    android:backgroundTint="@color/black"
                    android:contentDescription="@string/descrFotoPerfil"
                    tools:ignore="UnusedAttribute" />

                <TextView
                    android:id="@+id/txtDireccionDetalles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/amaranth"
                    android:textColor="@color/black"
                    tools:text="Detalle direcciÃ³n" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</ScrollView>


